<!DOCTYPE html>
<html>
  <head>
    <title>Nugroup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="/js/<%= action_name %>.js"></script>
  </head>
  <body>
    <div id="elm"></div>
    <script>
      var app = Elm.Page.<%= action_name.capitalize %>.init({
        node: document.getElementById("elm"),
        flags: "<%= yield :flags %>"
      })
    </script>
  </body>
</html>
